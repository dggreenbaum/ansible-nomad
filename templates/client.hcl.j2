# Nomad client configuration
# Based on: https://www.nomadproject.io/docs/cluster/bootstrapping.html

# Enable the client
client {
    enabled = true
    servers = ["nomad.service.consul:4647"]
    {% if nomad_node_class != "" %}
    node_class = {{ nomad_node_class }}
    {% endif %}
}

# Increase log verbosity
log_level = "DEBUG"
